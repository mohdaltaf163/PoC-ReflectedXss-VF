<apex:page controller="XSSController" showHeader="true" sidebar="false">
    <h1>Reflected XSS Vulnerability Demo</h1>
    
    <!-- Form for user input -->
    <apex:form>
        <apex:outputLabel value="Enter text:" for="userInput"/>
        <apex:inputText value="{!userInput}" id="userInput"/>
        <apex:commandButton value="Submit" action="{!null}" reRender="output"/>
    </apex:form>
    
    <!-- Reflecting user input without escaping -->
    <h2>Output:</h2>
    <apex:outputPanel id="output">
        <!-- Marking output as HTML to disable escaping -->
        <apex:outputText value="{!userInput}" escape="false"/>
    </apex:outputPanel>
</apex:page>
